#edit_account_wrap {
	width: 400px;
	background: #FFF;
	border-radius: 5px;
	overflow: hidden;
	padding: 20px;
}
#edit_account_wrap #close_fancybox {
	float: right;
	cursor: pointer;
}
#edit_account_wrap h2 {
	margin: 0 0 10px 0;
	font-size: 26px;
}
#edit_account_wrap h3 {
	margin: 20px 0 10px 0;
	font-size: 18px;
}
#edit_account_wrap label {
	font-weight: bold;
	font-size: 12px;
}
#edit_account_wrap i {
	color: #555555;
	font-size: 11px;
}
#edit_account_wrap input[type="text"],
#edit_account_wrap input[type="email"],
#edit_account_wrap input[type="password"],
#edit_account_wrap input[type="checkbox"] {
	width: 220px;
	padding: 5px;
	border: 1px solid #CCC;
	font-family: Arial, sans-serif;
	font-size: 13px;
	margin: 4px 0 10px 0;
}
#edit_account_wrap input[type="submit"] {
	font-size: 12px;
	padding: 7px 12px;
	font-weight: bold;
	text-shadow: 0px 1px 5px #F0F0F0;
	cursor: pointer;
	box-shadow: inset 0px 1px 1px #84C7F4;
	color: #FFF;
	border: 1px solid #166FA9;
	text-shadow: 1px 1px 1px #166FA9;
	background: #32A3F0;
	background: -webkit-gradient(linear, left top, left bottom, from(#32A3F0), to(#1389D3));
	border-radius: 4px;
	font-family: Arial, sans-serif;
}



