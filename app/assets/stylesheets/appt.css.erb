.appt_wrap {
	display: block;
	background: #C42438;
	border-radius: 3px;
	margin-bottom: 3px; 
	position: relative;
	min-height: 23px;
	line-height: 25px;
	overflow: hidden;
	color: #FFF;
	text-shadow: 0 -1px 1px #74131F;
	font-size: 12px;
	white-space: nowrap;
}
.appt_wrap .time_wrap {
	float: left;
	margin: 0 7px 0 7px;
	padding: 2px 0;
	font-size: 11px;
	font-weight: bold;
}
.appt_wrap .title {
	position: relative;
	padding: 2px 0;
	float: left;
	max-width: 158px;
	text-overflow: ellipsis;
	overflow: hidden;
}