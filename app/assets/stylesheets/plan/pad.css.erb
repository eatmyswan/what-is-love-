#pad {
	position: absolute;
	top: 30px;
	left: 20px;
	right: 330px;
	bottom: 20px;
	background: transparent;
}
#pad #top {
	background: url(<%= asset_path 'pad_top_bg.jpg' %>) repeat-x top left transparent;
	height: 65px;
	border-radius: 5px 5px 0 0;
	z-index: 1;
	box-shadow: 0 0 8px #000;
}
#pad #top .cover {
	width: 40px;
	height: 40px;
	display: inline-block;
	margin: 9px 10px 0 13px;
	background: rgba(42,40,36,0.4);
	border: 1px solid #575042;
	border-radius: 3px;
	box-shadow: 0 1px 1px #f6cf91;
	overflow: hidden;
}
#pad #top .cover img {
	width: 100%;
	border-radius: 3px;
}
#pad #top .cover_inbox {
	width: 40px;
	height: 40px;
	display: inline-block;
	margin: 9px 10px 0 13px;
	background: url(<%= asset_path 'inbox_large.png' %>) no-repeat;
	overflow: hidden;
}
#pad #top .title {
	display: inline-block;
	max-width: 400px;
	margin: 20px 0 0 0;
	color: #FFF;
	font-size: 20px;
	font-weight: bold;
	text-shadow: 0 1px 2px #000;
}
#pad #top .filters_wrap {
	position: absolute;
	top: 21px;
	right: 70px;
}
#pad #top .filters_wrap .filter {
box-shadow: 0px 1px 1px #dad2c7;
padding: 3px 10px 0;
text-shadow: #222 0px 1px 2px;
background: url(<%= asset_path 'mylife_filter_bg.png' %>) repeat-x top center #846942;
border-left: 1px solid #7a6239;
border-top: 1px solid #7a6239;
border-bottom: 1px solid #7a6239;
float: left;
color: #dad2c7;
display: block;
cursor: pointer;
height: 15px;
font-size: 11px;
z-index: 4;
position: relative;
}
#pad #top .filters_wrap .rounded_left {
border-radius: 10px 0 0 10px;
padding-left: 12px;
}
#pad #top .filters_wrap .rounded_right {
border-radius: 0 10px 10px 0;
border-right: 1px solid #7a6239;
padding-right: 12px;
}
#pad #top .filters_wrap .active, #pad #top .filters_wrap .filter:hover {
background: url(<%= asset_path 'mylife_filter_bg_active.png' %>) repeat-x top left #927543;
color: white;
}
#pad #top .ribbon {
	position: absolute;
	top: -4px;
	right: 8px;
	width: 53px;
	height: 105px;
	background: url(<%= asset_path 'ribbon.png' %>) no-repeat top left transparent;
	z-index: 3;
}
#pad #top .torn {
	background: url(<%= asset_path 'torn.png' %>) repeat-x top left transparent;
	height: 14px;
	position: absolute;
	top: 65px;
	left: 0;
	right: 0;
	z-index: 2;
}
#pad #page {
	position: absolute;
	top: 65px;
	left: 0;
	right: 0;
	bottom: 29px;
	background: #f3f2f1;
	z-index: 1;
	box-shadow: 0 0 8px #000;
}
#pad .stack {
	position: absolute;
	bottom: 0;
	height: 30px;
	left: 6px;
	right: 22px;
	background: url(<%= asset_path 'stack.png' %>) repeat-x top left transparent;
	z-index: 2;
}
#pad .stack .l {
	background: url(<%= asset_path 'stack_l.png' %>) no-repeat top left transparent;
	display: block;
	position: absolute;
	left: -13px;
	bottom: 0;
	width: 13px;
	height: 30px;
}
#pad .stack .r {
	background: url(<%= asset_path 'stack_r.png' %>) no-repeat top left transparent;
	display: block;
	position: absolute;
	right: -23px;
	bottom: 0;
	width: 23px;
	height: 30px;
}