#calendar_wrap {
	border-radius: 5px;
	background: #e1e1e1;
	box-shadow: 0 4px 8px rgba(0,0,0,0.5);
	padding: 10px;
}


#calendar_wrap #duration .duration_wrap {
	overflow: hidden;
	margin: 0 3px 0 0;
}
#calendar_wrap #duration input {
	width: 18px;
	height: 13px;
	float: left;
	padding: 3px 2px 0;
	text-align: center;
	border-radius: 2px;	
	font-size: 11px;
	display: block;
	color: #515151;
	background: #F7F7F7;
	background: -webkit-linear-gradient(top, #F7F7F7 0%, #EEEEEE 100%);
	border: 1px solid #CCC;
}
#calendar_wrap #duration .colon {
	padding: 2px 0;
	height: 17px;
	text-shadow: 0 1px 0 #FFF;
	float: left;
	text-align: center;
	margin: 0 2px;
}
#calendar_wrap .title {
	font-size: 12px;
	font-weight: bold;
	color: #555;
	text-shadow: 0 1px 0 #FFF;
	margin: 0 0 5px 0;
}
#calendar_wrap .sub_title {
	font-size: 11px;
	color: #616161;
	text-shadow: 0 1px 0 white;
	line-height: 20px;
	float: left;
	width: 28px;
}
