#vision_wrap {
	padding: 30px 20px 20px;
}
#vision_wrap .section {
	min-height: 30px;
	margin: 0 0 20px 0;
	position: relative;
}
#vision_wrap .section input {
	display: block;
	position: absolute;
	top: 5px;
	left: 0;
	right: 30px;
	background: white;
	border: 1px solid #CCC;
	border-radius: 10px;
	box-shadow: inset 0 1px 2px #CCC;
	font-family: Arial, sans-serif;
	font-size: 13px;
	padding: 1px 7px;
}
#vision_wrap .text {
	line-height: 1.4;
}

#vision_wrap #goals_section {
	overflow: hidden;
	padding: 10px 0 0 0;
}
#vision_wrap .section .edit {
	position: absolute;
	top: 0;
	right: 0;
	width: 15px;
	height: 15px;
	background: url(<%= asset_path 'edit.png' %>) no-repeat;
	float: right;
	cursor: pointer;
	opacity: 0.5;
	margin: 6px 4px 0 0;
	display: none;
}
#vision_wrap .section:hover {
}
#vision_wrap .section:hover .edit {
	display: block;
}
#vision_wrap .section.editing .edit, #vision_wrap .section.editing .text {
	display: none;
}
#vision_wrap .section .edit_done {
	width: 15px;
	height: 15px;
	background: url(<%= asset_path 'edit_done.png' %>) no-repeat;
	float: right;
	cursor: pointer;
	opacity: 0.5;
	margin: 6px 4px 0 0;
	display: none;
}
#vision_wrap .section .vision_form, #vision_wrap .section .purpose_form {
	display: none;
}
#vision_wrap .section.editing .vision_form, #vision_wrap .section.editing .purpose_form, #vision_wrap .section.editing .edit_done {
	display: block;
}

#vision_wrap .vision_group {
	float: left;
	width: 47%;
	min-height: 160px;
}
#vision_wrap .vision_group.odd {
	margin-right: 6%;
}
#vision_wrap .vision_group .handle {
	width: 17px;
	height: 17px;
	background: url(<%= asset_path 'move.png' %>) no-repeat;
	cursor: pointer;
	visibility: hidden;
}
#vision_wrap .vision_group .trash {
	width: 17px;
	height: 17px;
	background: url(<%= asset_path 'trash.png' %>) no-repeat;
	cursor: pointer;
	visibility: hidden;
	float: right;
}
#vision_wrap .vision_group .content {
	margin-left: 17px;
}
#vision_wrap .vision_group .add_goal {
	float: right;
	font-size: 11px;
	margin: 7px;
	cursor: pointer;
	opacity: 0.7;
	visibility: hidden;
}
#vision_wrap .add_goal:hover {
	opacity: 1.0;
}
#vision_wrap .vision_group:hover .add_goal,
#vision_wrap .vision_group:hover .trash,
#vision_wrap .vision_group:hover .handle {
	display: block;
	visibility: visible;
}

#vision_wrap .title_wrap {
	border-bottom: 1px solid #CCC;
	padding: 0 0 7px 0;
	margin: 0 0 1px 0;
}
#vision_wrap .title {
	font-weight: bold;
	font-size: 22px;
	letter-spacing: 1.0px;
}
#vision_wrap .goals_wrap {
	border-top: 1px solid #CCC;
	padding: 10px 0 0 0;
}
#vision_wrap .goal {
	margin: 0 0 10px 0;
	position: relative;
}
#vision_wrap .count {
	font-size: 14px;
	position: absolute;
	top: 2px;
	left: 0;
	width: 12px;
	text-align: right;
}
#vision_wrap .goal .text {
	display: block;
	padding: 0 18px 0 30px;
}
#vision_wrap .goal .delete {
	position: absolute;
	top: 0;
	right: 0;
	width: 15px;
	height: 15px;
	background: url(<%= asset_path 'delete.png' %>) no-repeat;
	float: right;
	cursor: pointer;
	opacity: 0.5;
	display: none;
}
#vision_wrap .goal .delete:hover{
	opacity: 1.0;
}
#vision_wrap .goal:hover .delete {
	display: block;
}
#vision_wrap #vision_images {
	width: 80%;
	margin: 0 auto;
	border-top: 1px dashed #c3c3c3;
}


#vision_wrap .form_wrap {
	position: relative;
	height: 20px;
	margin: 0 0 10px 0;
}
#vision_wrap .form_wrap #vision_goal_text {
	display: block;
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	background: white;
	border: 1px solid #CCC;
	border-radius: 10px;
	box-shadow: inset 0 1px 2px #CCC;
	font-family: Arial, sans-serif;
	font-size: 13px;
	padding: 1px 7px;
}


#vision_wrap #vision_images .image_wrap {
	float: left;
	width: 190px;
	height: 190px;
	margin: 0;
	padding: 0;
}

#vision_wrap #vision_images .image {
	display: table-cell;
	width: 190px;
	height: 190px;
	vertical-align: middle;
	text-align: center;
}
#vision_wrap #vision_images .image .relative{
	vertical-align: middle;
	position: relative;
	display: inline-block;
}
#vision_wrap #vision_images .image img {
	margin: 0 auto;
	display: block;
	max-width: 190px;
	max-height: 190px;
	border: 5px solid #FFF;
	box-shadow: 2px 2px 5px #888;
}

#vision_wrap #vision_images .image .delete_img {
	position: absolute;
	top: -8px;
	right: -8px;
	width: 22px;
	height: 22px;
	background: url(<%= asset_path 'delete_circle.png' %>) no-repeat;
	display: none;
}
#vision_wrap #vision_images .image .delete_img:hover {
	background-position: 0 -22px;
}
#vision_wrap #vision_images .image_wrap:hover .delete_img {
	display: block;
}
#vision_wrap #vision_images .image_wrap .relative .tape {
	position: absolute;
	top: -8px;
	left: -8px;
	width: 40px;
	height: 32px;
	background: url(<%= asset_path 'tape.png' %>) no-repeat;
}


.ui-jcoverflip {
  position: relative;
}

.ui-jcoverflip--item {
  position: absolute;
  display: block;
}

#vision_images {
  height: 200px;
  width: 630px;
  margin-bottom: 50px;
}

#vision_images .ui-jcoverflip--title {
	display: none !important;
}

#vision_images img {
  display: block;
  border: 0;
  outline: none;
}

#vision_images a {
  outline: none;
}

#vision_image_scrollbar.ui-widget-content {
	border-color: #bcbcbc;
}
#vision_image_scrollbar .ui-slider-handle {
	border-color: #777;
}

#vision_wrap .add_buttons {
	text-align: center;
}

#vision_wrap .add_buttons.loading #uploadify_wrap,
#vision_wrap .add_buttons.loading #create_v_group {
	position: absolute;
	visibility: hidden;
}
#vision_wrap .add_buttons.loading .loader {
	display: block;
	color: #fff;
	text-shadow: 0 1px 1px #000;
	background: #C8A56B url(<%= asset_path 'fancybox_loading.gif' %>) no-repeat 50% 60px;
	margin-top: 10px;
	padding: 20px 20px 80px 20px;
	border-radius: 5px;
	text-align: center;
}

#create_v_group {
	display: inline-block;
	margin: 50px 0 0 28px;
}
#create_v_group span {
	width: 67px;
	height: 91px;
	background: url(<%= asset_path 'add_list.png' %>) no-repeat;
	display: inline-block;
}

#new_v_group_wrap .modal_title {
	width: 200px;
}