#group {
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	overflow-x: hidden;
	overflow-y: auto;
	padding: 20px;
}
#group #input_wrap {
	display: block;
	border-radius: 5px;
	background: #d0d0d0;
	margin-bottom: 12px;
	box-shadow: 0 1px 0 #FFF;
	position: relative;
	height: 25px;
}
#group #input_wrap .inner_shadow {
	position: absolute;
	top:0;
	left: 0;
	right: 0;
	bottom: 0;
	border-radius: 5px;
	box-shadow: inset 0 1px 3px #555;
	z-index: 0;
}
#group #input_wrap input[type="text"] {
	width: 100%;
	font-family: Arial, sans-serif;
	font-size: 13px;
	background: transparent;
	z-index: 1;
	position: absolute;
	top: 6px;
	left: 8px;
	right: 8px;
}
#group h3.page {
	font-size: 14px;
	font-weight: bold;
	text-align: center;
	padding: 12px 0;
	color: #555;
	text-shadow: 1px 0 0 #FFF;
}

#plan_wrap li.task_wrap .icon,
#plan_wrap li.task_wrap .purpose_group {
	display: none !important;
}
