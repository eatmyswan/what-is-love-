.email_dialog {
	width: 700px;
	background: #ededed;
	border-radius: 5px;
	overflow: hidden;
}
.email_dialog .modal_title_wrap {
	height: 42px;
	border-radius:5px 5px 0 0;
	background: url(<%= asset_path 'modal_title_bg.jpg' %>) repeat-x 0 0 #777;
	border-bottom: 1px solid #8e8e8e;
	overflow: hidden;
}
.email_dialog  .modal_title {
	font-size: 15px;
	font-weight: bold;
	color: #444;
	text-shadow: 0 1px 0 #DDD;
	display: block;
	margin: 15px auto 0;
	width: 80px;
	text-align: center;
}
.email_dialog .modal_cancel_wrap {
	float: left;
}
.email_dialog .modal_submit_wrap {
	float: right;
}
.email_dialog .modal_submit_wrap .send {
	width: 62px;
	height: 32px;
	background: url(<%= asset_path 'sprite.png' %>) no-repeat -63px -277px transparent;
	/* some other overreaching style is messing with margin and padding,
	   hence the !importants */
	margin: 5px 5px 0 0 !important;
	padding: 0 !important;
}
.email_dialog #close_fancybox {
	width: 62px;
	height: 32px;
	background: url(<%= asset_path 'sprite.png' %>) no-repeat 0 -277px transparent;
	margin: 5px 0 0 5px;
	cursor: pointer;
}




.email_dialog #fields_wrap {
	padding: 10px 15px;
}
.email_dialog label {
	color: #333333;
    display: inline-block;
    font-size: 12px;
	font-weight: bold;
    margin: 9px 6px 0 0;
    text-align: right;
    vertical-align: top;
    width: 55px;
}
.email_dialog input[type="text"]{
	border: 1px solid #dbdbdb;
	background: #FFF;
	padding: 5px 5px 4px;
	font-size: 13px;
	width: 400px;
	font-family: Arial, sans-serif;
}
.email_dialog textarea {
	border: 1px solid #dbdbdb;
	background: #FFF;
	padding: 5px 5px 4px;
	font-size: 13px;
	width: 400px;
	height: 50px;
}
.email_dialog #recorder {
	display: inline-block;
}