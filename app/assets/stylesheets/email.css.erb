#email_wrap {
	width: 800px;
	min-height: 600px;
	background: #FFF;
	border-radius: 5px;
	overflow: hidden;
}
#email_wrap .modal_title_wrap {
	height: 42px;
	border-radius:5px 5px 0 0;
	background: url(<%= asset_path 'modal_title_bg.jpg' %>) repeat-x 0 0 #777;
	border-bottom: 1px solid #8e8e8e;
	overflow: hidden;
}
#email_wrap  .modal_title {
	font: bold 15px/1.0 Helvetica, Arial, sans-serif;
	color: #444;
	text-shadow: 0 1px 0 #DDD;
	display: block;
	margin: 15px auto 0;
	width: 80px;
	text-align: center;
}
#email_wrap .modal_cancel_wrap {
	float: left;
}
#email_wrap .modal_submit_wrap {
	float: right;
}
#email_wrap .modal_submit_wrap .send {
	width: 62px;
	height: 32px;
	background: url(<%= asset_path 'sprite.png' %>) no-repeat -63px -277px transparent;
	margin: 5px 5px 0 0;
}
#email_wrap #close_fancybox {
	width: 62px;
	height: 32px;
	background: url(<%= asset_path 'sprite.png' %>) no-repeat 0 -277px transparent;
	margin: 5px 0 0 5px;
	cursor: pointer;
}
#email_wrap #fields_wrap {
	padding: 10px 15px;
	background: #ededed;
	border-bottom: 1px solid #CCC;
}
#email_wrap #fields_wrap .address_wrap {
	margin: 0 0 10px 0;
}
#email_wrap #fields_wrap .address_wrap input[type="text"] {
	width: 315px;
	display: inline-block;
}
#email_wrap #fields_wrap .address_wrap .from_wrap{
	float: right;
}
#email_wrap #fields_wrap .subject_wrap {
	margin: 0 0 10px 0;
}
#email_wrap #fields_wrap .subject_wrap input[type="text"] {
	width: 707px;
	display: inline-block;
}
#email_wrap label {
	color: #333333;
    display: inline-block;
    font: bold 12px/1 Helvetica,Arial,sans-serif;
    margin: 9px 6px 0 0;
    text-align: right;
    vertical-align: top;
    width: 45px;
}
#email_wrap input[type="text"]{
	border: 1px solid #dbdbdb;
	background: #FFF;
	padding: 5px 5px 4px;
	font-size: 11px;
	font-family: 'Lucida Sans Unicode', 'Lucida Grande', Helvetica, Arial, sans-serif;
}
#email_wrap .body_wrap textarea {
	height: 240px;
	width: 97%;
	margin: 0 auto;
	padding: 10px 0;
	border: none;
	display: block;
	font-size: 12px;
	line-height: 1.2;
	font-family: 'Lucida Sans Unicode', 'Lucida Grande', Helvetica, Arial, sans-serif;
}
#email_wrap #recorder {
	display: inline-block;
}