#capture_wrap ul.sortable {
	min-height: 26px;
}
#capture_wrap .capture_group_wrap {
	margin: 0 0 15px 0;
	background: #eaeaea;
	border: 1px solid #dddddd;
	border-radius: 5px;
}
#capture_wrap .capture_group_wrap_inbox{
	background: #eaeaea;
	border-radius: 5px;
	margin: 0 0 15px 0;
}
#capture_wrap .capture_group_wrap .group_top_wrap {
	padding: 5px;
	border-bottom: 1px solid #d8d8d8;
	overflow: hidden;
}
#capture_wrap .capture_group_wrap .group_top_wrap .img_wrap {
	display: block;
	width: 18px;
	height: 18px;
	border-radius: 2px;
	overflow: hidden;
	float: left;
	margin: 0 0 0 1px;
	background: #CCC;
	box-shadow: inset 0 1px 2px #AAA;
}
#capture_wrap .capture_group_wrap .group_top_wrap .img_wrap img {
	width: 18px;
	height: 18px;
	border-radius: 2px;
}
#capture_wrap .capture_group_wrap .group_top_wrap .title_wrap {
	display: block;
	float: left;
	margin: 4px 0 0 7px;
	font-weight: bold;
	font-size: 12px;
	color: #505050;
	text-shadow: 0 1px 1px #FFF;
}
#capture_wrap .capture_group_wrap .group_bottom_wrap {
	padding: 5px 5px 3px 5px;
	border-top: 1px solid #f8f8f8;
}
h3.side_title {
	font-size: 15px;
	color: #f0f0f0;
	text-align: center;
	text-shadow: 0 2px 2px #000;
	margin: 26px 0 20px;
}
#capture_empty {
	width: 235px;
	height: 73px;
	background: url(<%= asset_path 'capture_empty.png'  %>) no-repeat;
	margin: 10px 0 0 30px;
}
#side_plan {
	margin: 0 10px;
	min-height: 26px;
	background: rgba(0, 0, 0, 0.2);
	border-radius: 5px;
	box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.3);
}
#side_plan li.task_wrap .target {
	display: block;
	background-position: 0 -15px;
	margin-left: 6px;
}
#side_plan li.task_wrap .task {
	padding: 6px 0 6px 2px;
	text-overflow: ellipsis;
	overflow: hidden;
	white-space: nowrap;
}
#side_plan li.task_wrap .checkbox, #side_plan li.task_wrap .date, #side_plan li.task_wrap .edit, #side_plan li.task_wrap .delete, #side_plan li.task_wrap .star {
	display: none;
}