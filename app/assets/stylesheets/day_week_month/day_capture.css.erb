ul.capture_sortable {
	min-height: 30px;
}
h3.side_title {
	font-size: 14px;
	color: #FFF;
	text-align: center;
	text-shadow: 0 2px 2px #000;
	margin: 18px 0 14px;
}
#capture_empty {
	width: 235px;
	height: 73px;
	background: url(<%= asset_path 'capture_empty.png'  %>) no-repeat;
	margin: 10px 0 0 30px;
}
#side_plan {
	margin: 0 10px;
	min-height: 26px;
	background: rgba(0, 0, 0, 0.2);
	border-radius: 5px;
	box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.3);
}
#side_plan li.task_wrap .target {
	display: block;
	background-position: 0 -15px;
	margin-left: 6px;
}
#side_plan li.task_wrap .task {
	padding: 6px 0 6px 2px;
	text-overflow: ellipsis;
	overflow: hidden;
	white-space: nowrap;
}
#side_plan li.task_wrap .checkbox, #side_plan li.task_wrap .date, #side_plan li.task_wrap .edit, #side_plan li.task_wrap .delete, #side_plan li.task_wrap .star {
	display: none;
}