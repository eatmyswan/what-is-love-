#calendar_categories {
}
#calendar_categories li.task_wrap .result {
	text-overflow: ellipsis;
	white-space: nowrap;
	width: 170px;
	overflow: hidden;
	padding: 6px 0 0 0;
	display: inline-block;
}
#calendar_categories li.task_wrap .thumbnail {
	display: none;
}
li.task_wrap .thumbnail {
	float: right;
	margin: 4px 4px 0 0;
	border-radius: 2px;
	overflow: hidden;
	width: 18px;
	height: 18px;
	display: block;
}
#calendar_categories .category {
	display: block;
	min-height: 38px;
	border-bottom: 1px solid #242220;
	border-top: 1px solid #3C3734;
	position: relative;
	z-index: 3;
}
#calendar_categories .category .top {
	cursor: pointer;
}
#calendar_categories .category ul {
	display: none;
}
#calendar_categories .category.active ul {
	display: block;
}
#calendar_categories .category .top {
	overflow: hidden;
}
#calendar_categories .category_task_wrap {
	margin: 8px;
	min-height: 26px;
	background: rgba(0, 0, 0, 0.2);
	border-radius: 5px;
	box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.3);
}

.calendar_title {
	display: inline-block;
	max-width: 400px;
	margin: 20px 0 0 20px;
	color: white;
	font-size: 20px;
	font-weight: bold;
	text-shadow: 0 1px 2px black;
}
#calendar_controls {
	position: absolute;
	top: 21px;
	right: 70px;
}
#calendar_controls .button {
	box-shadow: 0px 1px 1px #DAD2C7;
	padding: 3px 10px 0;
	text-shadow: #222 0px 1px 2px;
	background: url(<%= asset_path 'mylife_filter_bg_active.png' %>) repeat-x top left #927543;
	color: #FFF;
	border-left: 1px solid #7A6239;
	border-top: 1px solid #7A6239;
	border-bottom: 1px solid #7A6239;
	float: left;
	display: block;
	cursor: pointer;
	height: 15px;
	font-size: 11px;
	z-index: 4;
	position: relative;
}
#calendar_controls .button.rounded_left {
	border-radius: 10px 0 0 10px;
	padding-left: 12px;
}
#calendar_controls .button.rounded_right {
	border-radius: 0 10px 10px 0;
	border-right: 1px solid #7A6239;
	padding-right: 12px;
}