#day_drop_wrap {
	margin: 0 10px;
}
.day_wrap {
	margin: 0 0 15px 0;
}
.day_wrap .day_title {
	color: #CCC;
	margin: 0 0 5px;
}
.day_wrap .day_drop {
	min-height: 26px;
	background: rgba(0, 0, 0, 0.2);
	border-radius: 5px;
	box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.3);
}
.day_drop_over {
	background: blue !important;
}