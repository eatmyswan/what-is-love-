#week_plan_side {
	padding: 0 0 20px 0;
	border-bottom: 1px solid #1F1D1C;
	margin: 0 10px;
}

#week_plan_side .date {
	margin: 30px 0 0 0;
	height: 100%;
	position: relative;
	display: block;
	font-size: 20px;
	color: #FFF;
	vertical-align: bottom;
	white-space: nowrap;
}

#day_drop_wrap {
	margin: 0 10px;
	border-top: 1px solid #3D3A39;
	padding: 20px 0 20px;
}
.day_wrap {
	margin: 0 0 15px 0;
}
.day_wrap .day_title {
	color: #CCC;
	margin: 0 0 5px;
}
.day_wrap .day_drop {
	min-height: 26px;
	background: rgba(0, 0, 0, 0.2);
	border-radius: 5px;
	box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.3);
}
.day_drop_over {
	background: #0060b9 !important;
	background: -webkit-linear-gradient(top, #2a90ee 0%, #0060b9 100%) !important;
	box-shadow: inset 0 1px 0 #6fb7f9 !important;
	color: #FFF !important;
	opacity: 1.0 !important;
}