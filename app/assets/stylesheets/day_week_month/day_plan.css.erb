#day_plan_wrap ul.sortable {
	min-height: 30px;
}
#side_schedule {
	position: absolute;
	top: 85px;
	bottom: 0;
	left: 0;
	right: 0;
	overflow-y: scroll;
	overflow-x: hidden;
}
#side_schedule .grid_wrap {
	height: 1445px;
	position: absolute;
	left: 25px;
	right: 10px;
	top: 0;
}
#side_schedule .grid_wrap .hours {
	left: -25px;
	width: 20px;
	position: absolute;
	text-align: right;
	font-size: 11px;
}
#side_schedule .grid_wrap .hours .hour {
	height: 60px;
	text-align: right;
	position: relative;
	font-size: 11px;
	color: #FFF;
}
#side_schedule .grid_wrap .grid {
	position: absolute;
	height: 1445px;
	left: 0;
	right: 0;
	top: 5px;
	bottom: 0;
}
#side_schedule .scheduled_task {
	background: #FFF;
	position: absolute;
	left: 0;
	width: 100%;
}

