#day_view {
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	padding: 20px;
}
#day_view .day_header {
	margin-left: 10px;
}
#day_view .queue_wrap {
	height: 50px;
	border: 1px solid #CCC;
	position: relative;
	margin-left: 10px;
}
#day_view .queue_wrap .queue {
	position: absolute;
	bottom: 0;
	left: 0;
	top: 0;
	right: 0;
	overflow-y: auto;
	overflow-x: hidden;
	padding: 1px;
}
#day_view .queue_wrap .queue_hour {
	position: absolute;
	width: 30px;
	text-align: right;
	font-size: 11px;
	left: -30px;
}
#day_view .grid_hours_wrap {
	position: absolute;
	top: 85px;
	bottom: 0;
    left: 0;
    right: 0;
	overflow-y: scroll;
	overflow-x: hidden;
}
#day_view .grid_hours_wrap .grid_wrap {
	background-image: url(<%= asset_path 'gridh.png' %>);
    height: 1800px;
    position: absolute;
    left: 30px;
    right: 20px;
    top: 0;
	border: 1px solid #CCC;
}
#day_view .grid_hours_wrap .hours {
	left:-20px;
	width: 20px;
    position: absolute;
	text-align: right;
	font-size: 11px;
}
#day_view .grid_hours_wrap .hours .hour { 
	height:75px;
	text-align: right;
	position: relative;
	font-size: 11px;
}
#day_view .grid_hours_wrap .grid { 
	position: absolute;
	height:1800px;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
}
#day_view .time_drop_hover {
	background: #CCC;
}
#day_view .time_drop .drop_task {
	display: none;
}
#day_view .time_drop li.task_wrap {
	position: absolute;
	left: 1px;
	right: 1px;
	opacity: 0.9;
}
#day_view .time_drop li.task_wrap:hover {
	opacity: 1.0;
}