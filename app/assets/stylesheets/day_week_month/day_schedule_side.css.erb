#schedule_side {
}
#schedule_side #date_section {
	margin: 0 10px;
	padding: 20px 0 26px;
	border-bottom: 1px solid #1F1D1C;
}
#schedule_side #date_section .big_date {
	display: inline-block;
	font-size: 90px;
	color: #FFF;
	height: 80px;
	margin: 0 7px 0 0;
}
#schedule_side #date_section .small_date_wrap {
	height: 100%;
	position: relative;
	display: inline-block;
	font-size: 14px;
	color: #FFF;
	vertical-align: bottom;
	white-space: nowrap;
}
#schedule_side #date_section .small_date_day {
	position: absolute;
	left:0;
	bottom: 25px;
	font-size: 18px;
}
#schedule_side #date_section .small_date {
	position: absolute;
	left:0;
	bottom: 5px;
}
#schedule_side #times_section {
	margin: 0 10px 0;
	border-top: 1px solid #3D3A39;
	padding: 26px 0 28px;
	overflow: hidden;
	border-bottom: 1px solid #1F1D1C;
}
#schedule_side #times_section .box {
	border-radius: 5px;
	width: 45%;
	background: rgba(0,0,0,0.25);
	padding: 10px 0;
	box-shadow: 0 1px 2px rgba(255,255,255,0.1);
	margin: 0 1px;
	position: relative;
	overflow: hidden;
}
#schedule_side #times_section .box .inset {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	box-shadow: inset 0 2px 5px rgba(0,0,0,0.2);
	border-radius: 4px;
}
#schedule_side #times_section .must_wrap {
	float: left;
}
#schedule_side #times_section .total_wrap {
	float: right;
}
#schedule_side #times_section .time {
	font-size: 30px;
	text-align: center;
	line-height: 35px;
	margin: 0 0 3px 0;
	color: #FFF;
	text-shadow: 0 2px 4px #000;
}
#schedule_side #times_section .sub_title {
	font-size: 11px;
	text-align: center;
	color: #CCC;
}