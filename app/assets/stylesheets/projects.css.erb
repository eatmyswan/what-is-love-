#project_ult_block {
	border: 1px solid #CCC;
	overflow: hidden;
	min-height: 100px;
	position: relative;
	border-radius: 5px;
	background: #FFF;
}
#project_ult_block .block_outcome_wrap {
	position: absolute;
	top: 0;
	right: 150px;
	width: 149px;
	height: 100%;
	border-left: 1px solid #CCC;
	background: url(/assets/big_target.png) no-repeat center center transparent;
}
#project_ult_block .block_outcome_wrap input[type="text"],
#project_ult_block .block_purpose_wrap input[type="text"] {
	width: 92px;
	background: white;
	border: 1px solid #CCC;
	border-radius: 10px;
	box-shadow: inset 0 1px 2px #CCC;
	font-family: Arial, sans-serif;
	font-size: 13px;
	padding: 1px 7px;
	display:inline-block;
}
#project_ult_block .block_outcome_wrap .outcome,
#project_ult_block .block_purpose_wrap .purpose {
	padding: 10px;
}
#project_ult_block .block_outcome_wrap .edit,
#project_ult_block .block_purpose_wrap .edit {
	width: 15px;
	height: 15px;
	background: url(/assets/edit.png) no-repeat;
	cursor: pointer;
	opacity: 0.5;
	display: none;
	float: right;
	margin: 1px 0 0 0;
}
#project_ult_block .block_outcome_wrap:hover .edit,
#project_ult_block .block_purpose_wrap:hover .edit {
	display: block;
}
#project_ult_block .block_outcome_wrap.editing .edit,
#project_ult_block .block_purpose_wrap.editing .edit {
	display: none;
}
#project_ult_block .block_outcome_wrap .edit_done,
#project_ult_block .block_purpose_wrap .edit_done {
	width: 15px;
	height: 15px;
	background: url(<%= asset_path 'edit_done.png' %>) no-repeat;
	cursor: pointer;
	opacity: 0.5;
	display: none;
	float: right;
	margin: 1px 0 0 0;
}
#project_ult_block .block_outcome_wrap.editing .edit_done:hover,
#project_ult_block .block_purpose_wrap.editing .edit_done:hover {
	opacity: 1.0;
}
#project_ult_block .block_outcome_wrap.editing .edit_done,
#project_ult_block .block_purpose_wrap.editing .edit_done {
	display: inline-block;
}
#project_ult_block .block_outcome_wrap form,
#project_ult_block .block_purpose_wrap form {
	display: none;
}
#project_ult_block .block_outcome_wrap.editing form,
#project_ult_block .block_purpose_wrap.editing form {
	display: block;
}
#project_ult_block .block_outcome_wrap.editing .outcome_text,
#project_ult_block .block_purpose_wrap.editing .purpose_text {
	display: none;
}
#project_ult_block .block_purpose_wrap {
	position: absolute;
	top: 0;
	right: 0;
	width: 149px;
	height: 100%;
	border-left: 1px solid #CCC;
}

#project_ult_block .header {
	background: #E12B34;
	color: white;
	font-weight: bold;
	text-align: center;
	text-shadow: 0 1px 1px black;
	font-size: 12px;
	height: 20px;
	padding: 6px 0 0 0;
}
#project_ult_block .notes_wrap .header {
	margin-right: 300px;
}

#project_must_must {
	padding: 10px;
	margin-right: 300px;
	min-height: 30px;
}
#project_must {
	min-height: 30px;
}
#project_wrap #incomplete {
	min-height: 30px;
}

#project_forecast_wrap {
	overflow: scroll;
	width: 100%;
	height: 100%;
}