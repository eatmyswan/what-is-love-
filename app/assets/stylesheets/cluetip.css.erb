#cluetip{
	border-radius: 5px;
}
/* global */
div.ui-cluetip {
	font-size: 1em;
}
.ui-cluetip-header,
.ui-cluetip-content {
}
.ui-cluetip-header {
	font-size: 1em;
	margin: 0;
	overflow: hidden;
	display: none;
}

.cluetip-title .cluetip-close {
	float: right;
	position: relative;
	display: none;
}
.cluetip-close img {
	border: 0;
}

#cluetip-waitimage {
	width: 43px;
	height: 11px;
	position: absolute;
	display: none;
}
.cluetip-arrows {
}
.cluetip-extra {
	display: none;
}

