#cal_popup {
	position: absolute;
	z-index: 9999;
	background: rgba(0,0,0,0.8);
	padding: 10px;
	border-radius: 3px;
	color: #FFF;
	width: 200px;
	border: 1px solid #000;
	box-shadow: 0 2px 8px rgba(0,0,0,0.7);
	font-size: 12px;
	display: none;
}
#cal_popup label,
#cal_popup input  {
	cursor: pointer;
}
#cal_popup .done {
	background: url(/assets/filter_active.png) repeat-x top left #1773B4;
	display: inline-block;
	padding: 3px 10px 0;
	border: 1px solid #1D1B1A;
	text-shadow: #1D1B1A 0px 1px 2px;
	height: 16px;
	font-size: 11px;
	cursor: pointer;
	border-radius: 10px;
	margin-top: 5px;
}

#datepicker {
	margin: 0 10px;
	border-top: 1px solid #3D3A39;
	padding: 20px 0 20px;
}
#datepicker .ui-datepicker { 
}
#datepicker .ui-datepicker .ui-datepicker-header { 
	position:relative;
	height: 30px;
	margin: 0 0 5px 0;
}
#datepicker .ui-datepicker .ui-datepicker-prev, 
#datepicker .ui-datepicker .ui-datepicker-next { 
	position:absolute; 
	top: 4px;
	width: 23px; 
	height: 23px;
	display: block;
	cursor: pointer;
}
#datepicker .ui-datepicker .ui-datepicker-prev-hover, 
#datepicker .ui-datepicker .ui-datepicker-next-hover { 

}
#datepicker .ui-datepicker .ui-datepicker-prev { 
	left: 10px; 
	background: url(<%= asset_path 'capture_cal_next_prev.png' %>) no-repeat -6px -4px transparent;
}
#datepicker .ui-datepicker .ui-datepicker-prev:hover {
	background-position: -6px -26px;
}
#datepicker .ui-datepicker .ui-datepicker-next { 
	right: 10px; 
	background: url(<%= asset_path 'capture_cal_next_prev.png' %>) no-repeat -27px -4px transparent;
}
#datepicker .ui-datepicker .ui-datepicker-next:hover {
	background-position: -27px -26px;
}
#datepicker .ui-datepicker .ui-datepicker-prev span, 
#datepicker .ui-datepicker .ui-datepicker-next span { 
	display: none;
}
#datepicker .ui-datepicker .ui-datepicker-title {
	text-align: center;
	line-height: 30px;
	font-weight: bold;
	font-size: 15px;
	color: #b1aeab;
	text-shadow: 0 1px 2px #000;
}
#datepicker .ui-datepicker table {
	border-collapse: collapse; 
	width: 100%;
}
#datepicker .ui-datepicker table tbody {
	border-top: 1px solid #1f1d1c;
	border-bottom: 1px solid #3d3a39;
}	
#datepicker .ui-datepicker td { 
}
#datepicker .ui-datepicker th {
	text-align: center;
	font-weight: normal;
	font-size: 11px;
	color: #b1aeab;
	padding: 2px 0 7px 0;
	text-shadow: 0 1px 2px #000;
}
#datepicker .ui-datepicker td a { 
	border-top: 1px solid #3d3a39;
	border-right: 1px solid #3d3a39;
	border-left: 1px solid #1f1d1c;
	border-bottom: 1px solid #1f1d1c;
	font-size: 11px;
	display: block;
	text-align: center;
	font-weight: normal;
	color: #b1aeab;
	line-height: 30px;
	text-shadow: 0 1px 1px #000;
}
#datepicker td.active_week a {
	background: rgba(0,0,0,0.3);
	color: #FFF;
}
#datepicker .ui-datepicker td.sunday a,
#datepicker .ui-datepicker td.sunday span {
	border-left: 0;
}
#datepicker .ui-datepicker td.saturday a,
#datepicker .ui-datepicker td.saturday span{
	border-right: 0;
}
#datepicker td.ui-datepicker-current-day {
}
#datepicker td.ui-datepicker-today a {
	color: #FFF;
}
#datepicker td.ui-datepicker-current-day a, 
#datepicker .ui-datepicker td a:hover,
#datepicker td.ui-datepicker-over a {
	background: #0060b9;
	background: -webkit-linear-gradient(top, #2a90ee 0%, #0060b9 100%);
	box-shadow: inset 0 1px 0 #6fb7f9;
	color: #FFF;
	opacity: 1.0;
}

#datepicker td.ui-datepicker-today {
}
#datepicker td.ui-datepicker-other-month span {
	border-top: 1px solid #3d3a39;
	border-right: 1px solid #3d3a39;
	border-left: 1px solid #1f1d1c;
	border-bottom: 1px solid #1f1d1c;
	font-size: 11px;
	display: block;
	text-align: center;
	font-weight: normal;
	color: #444;
	line-height: 30px;
}