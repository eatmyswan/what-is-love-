.email_outcome {
	display: block;
	background: white;
	border: 1px solid #CCC;
	border-radius: 5px;
	position: relative;
}
.email_outcome .header {
	background: #E12B34;
	color: white;
	font-weight: bold;
	text-align: center;
	text-shadow: 0 1px 1px black;
	font-size: 12px;
	height: 25px;
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	z-index: 0;
	border-radius: 5px 5px 0 0;
}
.email_outcome .header .action_title {
	position: absolute;
	top: 7px;
	left: 0;
	right: 300px;
}
.email_outcome .header .outcome_title {
	position: absolute;
	top: 7px;
	right: 150px;
	width: 150px;
}
.email_outcome .header .purpose_title {
	position: absolute;
	top: 7px;
	right: 0;
	width: 150px;
}
.email_outcome .outcome_wrap {
	display: block;
	position: absolute;
	top: 0;
	bottom: 0;
	right: 150px;
	width: 150px;
	border-left: 1px solid #CCC;
}
.email_outcome .outcome_wrap .task_title {
	margin: 25px 0 0 0;
	padding: 5px;
	font-size: 12px;
}
.email_outcome .actions_wrap {
	margin: 0 300px 0 0;
	padding: 5px;
}
.email_outcome .actions_wrap .action_list {
	margin: 22px 0 5px 0;
}
.email_outcome .actions_wrap .action_list .action_wrap {
	border: 0 !important;
	border-bottom: 1px solid #CCC !important;
	border-radius: 0 !important;
}
.email_outcome .purpose_wrap {
	position: absolute;
	top: 0;
	bottom: 0;
	right: 0;
	width: 150px;
	border-left: 1px solid #CCC;
}
.email_outcome .purpose_wrap .purpose {
	margin: 25px 0 0 0;
	padding: 5px;
	font-size: 12px;
}


