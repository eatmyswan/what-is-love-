/*
*= require ../fancybox
*= require_directory .
*/

* {	
	margin:0px;
	padding:0px;
	outline:none !important;
	text-decoration:none;
	border: 0;
	vertical-align: top;
}
body {
	line-height: 1.5;
	font-family: Arial, sans-serif;
	font-size: 14px;
}
a {
	cursor: pointer;
}

/**  Actual Styles  **/


#container {
    margin:20px auto;
    width:800px;
}
#content {
	margin: 20px 0;
}
h2{
	margin: 0 0 20px 0;
}
a {
	color: #0059c6;
}
a:hover {
	color: #2c7fe6;
}
input {
	border: 1px solid #CCC;
	padding: 5px;
	margin: 0 0 10px 0;
	font-family: Arial,sans-serif;
	font-size: 13px;
}
input[type="submit"] {
	font-size: 14px !important;
	margin: 10px 0;
color: white;
display: inline-block !important;
background-color: #FA3219;
background-image: -webkit-gradient(linear, left top, left bottom, from(#F76700), to(#FA3219));
background-image: -webkit-linear-gradient(top, #F76700, #FA3219);
background-image: -moz-linear-gradient(top, #F76700, #FA3219);
background-image: -ms-linear-gradient(top, #F76700, #FA3219);
background-image: -o-linear-gradient(top, #F76700, #FA3219);
background-image: linear-gradient(top, #F76700, #FA3219);
background-color: #F76700;
border: 1px solid #C53421;
border-radius: 20px;
-webkit-border-radius: 20px;
-moz-border-radius: 20px;
padding: 5px 15px;
margin-bottom: 7px;
text-shadow: 0px 1px 0px rgba(0, 0, 0, 0.5);
-webkit-box-shadow: 0 1px 5px rgba(0, 0, 0, 0.3), inset -1px 1px 1px rgba(255, 255, 255, 0.75);
-moz-box-shadow: 0 1px 5px rgba(0, 0, 0, 0.3), inset -1px 1px 1px rgba(255, 255, 255, 0.75);
box-shadow: 0 1px 5px rgba(0, 0, 0, 0.3), inset -1px 1px 1px rgba(255, 255, 255, 0.75);
-moz-transition: all 0.3s ease;
-webkit-transition: all 0.3s ease;
-o-transition: all 0.3s ease;
transition: all 0.3s ease;
cursor: pointer;
}
input[type="submit"]:hover {
	-webkit-box-shadow: 0 1px 5px rgba(0, 0, 0, 1,0), inset -1px 1px 1px rgba(255, 255, 255, 1.0);
-moz-box-shadow: 0 1px 5px rgba(0, 0, 0, 1,0), inset -1px 1px 1px rgba(255, 255, 255, 1.0);
box-shadow: 0 1px 5px rgba(0, 0, 0, 1.0), inset -1px 1px 1px rgba(255, 255, 255, 1.0);
}
label {

	font-size: 14px;
	margin: 5px 0;
}
#user_links {
	float: right;
	margin: 10px 0 0 0;
}

#logo {
	font-family: Arial,sans-serif;
	font-size: 50px;
	font-weight: bold;
	color: #444;
	letter-spacing: -2px;
	display: inline-block;
}
h3 {
	display: block;
	text-align: center;
	margin: 0 0 40px 0;
	font-size: 24px;
}
h4 {
	margin: 0 0 5px 0;
	font-size: 18px;
}
ul {
	list-style:disc;
	margin: 0 0 0 30px;
	display: block;
}
ul li {
	padding: 0 0 0 10px;
}
#beta_flag {
	width: 68px;
	height: 68px;
	position: absolute;
	top: 0;
	right: 0;
}

