/*
*= require ../fancybox
*= require_directory .
*/

* { margin:0px; padding:0px; outline:none!important; text-decoration:none; border:0; vertical-align:top }
body { line-height:1; background:#111; font-family: Helvetica, arial, sans-serif; color:#666; }
ol,ul,li { list-style:none; }
a, a:visited { cursor: pointer; color: #1278D7; }
a:hover { color: #C50405; }
.fr { float:right; }
.fl { float:left; }
img.center { display:block; margin:0 auto; }
p { line-height:1.2; }
p.center { text-align:center; }
.fs12 { font-size:12px; }
.fs14 { font-size:14px; }
.fs16 { font-size:16px; }
.fs18 { font-size:18px; }
.fs20 { font-size:20px; }
.fs22 { font-size:22px; }
.fs24 { font-size:24px; }
.fs26 { font-size:26px; }
.fs28 { font-size:28px; }
.space10 { margin-top:10px!important; margin-bottom:10px!important; }
.space20 { margin-top:20px!important; margin-bottom:20px!important; }
.space30 { margin-top:30px!important; margin-bottom:30px!important; }
.space40 { margin-top:40px!important; margin-bottom:40px!important; }
.space50 { margin-top:50px!important; margin-bottom:50px!important; }
h2 { font-family: Helvetica, arial, sans-serif; font-size:32px; margin:15px 0; font-weight:normal;  }
.clear { clear:both; }
.col1 { float:left; width:48%; }
.col2 { float:right; width:48%; }

body#sign-in { background:url(<%= asset_path 'landing/red-chambray.jpg' %>) repeat; }

#wrapper {
    background:#fff;
    background-image: url(<%= asset_path 'landing/footer-bg.jpg' %>), url(<%= asset_path 'landing/header-bg.jpg' %>);
    background-position: bottom left, top left;
    background-repeat: repeat-x;
    overflow:hidden;
    }
body.index #wrapper, body.mobile #wrapper {
    background-image: url(<%= asset_path 'landing/footer-bg.jpg' %>), url(<%= asset_path 'landing/header-home-bg.jpg' %>);
    background-position: bottom left, top left;
    background-repeat: repeat-x;
    overflow:hidden;
    }

body.tour #wrapper {
    background-image: url(<%= asset_path 'landing/footer-bg.jpg' %>), url(<%= asset_path 'landing/header-bg.jpg' %>);
}

#container {
    margin:0 auto;
    width:960px;
    }

#header {
    height:45px;
}
.h-nav {
    float:left;
    margin-left:70px;
    margin-top:15px;
}
.h-nav li {
    float:left;
    margin-right:15px;
    font-size:14px;
    font-weight:bold;
}
.h-nav li a { color:#fff; }
.h-nav li a:hover { text-decoration:underline; }

#content {
    margin-bottom:45px;
}
.content-header {
    height:165px;
    overflow:hidden;
}
.page-title {
    position:relative;
    margin-top:35px!important;
}

#super-promo {
    position:relative;
    width:1214px;
    height:605px;
    margin-top:-165px;
    margin-left:-115px;
    margin-bottom:30px;
}
body.mobile #super-promo {
    height:867px;
}

#rollbox {
    position:absolute;
    top:162px;
    left:295px;
    width:700px;
    height:350px;
    background:url(<%= asset_path 'landing/promo-watch.png' %>) no-repeat top left;
}
#promo-bg2 {
    position:absolute;
    top:0;
    width:1214px;
    height:456px;
    background:url(<%= asset_path 'landing/promo-bg2.png' %>) no-repeat top left;
}
#promo-bg1 {
    width:600px;
    height:349px;
    background:url(<%= asset_path 'landing/promo-bg1.png' %>) no-repeat top left;
}
#promo-signup {
    position:absolute;
    bottom:0;
    right:0;
    width:201px;
    height:53px;
    background:url(<%= asset_path 'landing/promo_signup.png' %>) no-repeat top left;
}
#promo-logo {
    position:absolute;
    bottom:0;
    left:465px;
    width:300px;
    height:95px;
    background:url(<%= asset_path 'landing/promo_logo.png' %>) no-repeat top left;
}
#mobile-promo-bg {
    position:absolute;
    top:0;
    width:1214px;
    height:867px;
    background:url(<%= asset_path 'landing/mobile-promo-bg.png' %>) no-repeat top center;
}
#footer {
    width:1009px;
    height:326px;
    margin-left:-48px;
    padding-left:48px;
    background: url(<%= asset_path 'landing/footer-bg.png' %>) no-repeat top left;
}
.f-btn {
    float:left;
    width:240px;
}
.f-btn:hover {
    background: url(<%= asset_path 'landing/f-btn-a.png' %>) repeat-x top left;
}
.f-btn.no-link { opacity: 0.2; }
.f-btn.no-link:hover { background: none; }

/* More Content */
.shadowdrop {
    background:url(<%= asset_path 'landing/shadow.png' %>) no-repeat top center;
}
.entry-box {
    padding-top:50px;
    min-height:100px;
    overflow:hidden;
}
.testimonial {
    width:1000px;
    overflow:hidden;
    margin-top:20px;
}

.tbox {
    float:left;
    width:227px;
    height:508px;
    background:url(<%= asset_path 'landing/box_08.png' %>) no-repeat top left;
    color:#d9d9d9;
    margin-right:16px;
    overflow:hidden;
}
.testimonial p {
    font-size:12px;
    padding: 10px;
    line-height:1.3;
}
.tname {
    font-size:14px;
    font-weight:bold;
    color:#fff;
}
.ttitle {
    font-size:12px;
    color:#c9c9c9;
}
.tbold { font-weight:bold; color:#eee!important; }

ul.tmrock {
    margin:30px 0 0 115px;
}
ul.tmrock li {
    background:url(<%= asset_path 'landing/home_26.png' %>) no-repeat left center;
    padding-left:28px;
    margin-bottom:30px;
}

body.faq #content ul li {
    margin-bottom:10px;
    line-height:1.3;
}
body.faq #content .answers ul {
    margin-top:25px;
}
body.faq #content .answers ul li {
    margin-bottom:20px;
    line-height:1.3;
}
body.faq #content .answers a {
    cursor: auto;
    font-size:18px;
    font-weight:bold;
}
.tour img {
    display:block;
    margin:0 auto;
}
.tour .entry-box p { text-align:center; }

p.topdown { margin-bottom:-13px; }
p.bottomup { margin-top:-10px; }

.tour-signup {
    margin-top:60px!important;
    margin-bottom:-35px!important;
    position:relative;
    z-index:100;
}
.ccontainer {
    width:1000px;
}
.cbox {
    position:relative;
    width:326px;
    height:350px;
    float:left;
    margin-left:-24px;
    padding-left:20px;
    background:url(<%= asset_path 'landing/customer-bg.png' %>) no-repeat 20px 0;
    overflow:hidden;
}
.paperclip {
    position:absolute;
    top:3px;
    left:10px;
    width:53px;
    height:107px;
    background:url(<%= asset_path 'landing/paperclip.png' %>) no-repeat top left;
}
.ccontent {
    margin-top:11px;
    margin-left:9px;
    font-size:12px;
}
div.ccontent p:first-of-type {
    margin-top:-36px!important;
}
.ccontent p {
    padding:5px 20px 5px 13px;
}
.cname {
    font-size: 22px;
    font-weight:bold;
}
.ctitle {
    font-weight:bold;
}
.csignup {
    height:40px;
}
.csignup-btn {
    margin-top:25px!important;
    margin-bottom:-35px!important;
    position:relative;
    z-index:100;
}
#sign-in-wrapper {
    width:80%;
    margin:0 auto;
}
#sign-in-box {
    width:650px;
    margin: 100px auto 0 auto;
    text-align:center;
}
#sign-in-box a {
    color: #FFFFFF;
    font-weight: bold;
    text-shadow: 0 1px 2px #000000;
}

.hide { display: none; }
