/* *
 * Dialog.css
 * These stylings are used in the landing pages (i.e. user is not logged in)
 */

#fancybox-content {
  -webkit-box-shadow: none;
  -moz-box-shadow: none;
  box-shadow: none;
  div { overflow: hidden !important; }
}

#fancybox-wrap .dialog {
  width: 415px;

  .top, .content-end, .bottom {
    background: url(<%= asset_path 'landing/dialog.png' %>);
  }
  .top { height: 92px; }
  .content-end { height: 10px; background-position: 0 -95px; }
  .bottom {
    height: 41px;
    padding: 8px 20px 0 20px;
    background-position: 0 -105px;
    text-align: right;
  }

  .content {
    background: url(<%= asset_path 'landing/dialog-mid.png' %>) repeat-y;
    padding: 10px 40px;
    p, h3 { margin-bottom: 20px; }
  }
  .no-account-question {
    a, a:visited { color: #076EC8; text-decoration: underline; }
  }
  label {
    font-size: 0.8em;
    color: #000;
    padding-left: 20px;
  }
  .input {
    background: url(<%= asset_path 'landing/dialog-field.png' %>);
    height: 22px;
    width: 325px;
    padding: 2px 8px 9px 8px;
  }
  .remember_wrap {
    padding: 10px 8px;
    label { padding-left: 4px; }
  }
  input[type=submit], button {
    width: 80px;
    height: 28px;
    padding-bottom: 2px;
    cursor: pointer;
    background: url(<%= asset_path 'landing/dialog-button.png' %>) no-repeat;
    color: #fff;
    text-shadow: #1d1b1a 0px 1px 2px;
    font-size: 0.8em;
    font-weight: bold;
  }
  .loader {
    width: 42px;
    height: 42px;
    background: url(<%= asset_path 'fancybox_loading.gif' %>) no-repeat;
    position: relative;
    top: -6px;
  }
  ul {
    padding-left: 10px;
    margin-bottom: 10px;
    li { margin: 5px 0; }
  }
  .errorExplanation { color: #880000; }
}

#fancybox-wrap .dialog.loading {
  .bottom { text-align: center; }
  input[type=submit] { display: none; }
  .loader { display: inline-block; }
}
