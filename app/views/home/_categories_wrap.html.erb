<div class="categories_wrap" id="plan_categories">

	<%= link_to group_path(@inbox.id.to_s), :class => 'category', :id => @inbox.id.to_s,:remote => true do %>
		<span class="inbox_cover"></span>
		<span class="title">Inbox</span>
		<span class="count"><span class="inner_shadow"></span><span class="count_text"><%= @inbox.tasks.incomplete.count %></span><span>
	<% end %>

	<div class="title_bar">
		<span class="title">My Life</span>
		<span class="toggle_category" id="toggle_personal"></span>
		<span class="add_category" id="add_personal"></span>
	</div>
	<div id="personal" class="connectedSortable">
		<div class="category new_category" id="new_personal">
			<%= form_for(Group.new, :remote => true) do |f| %>
			<span class="cover">
				<input type="file" name="image[image]">
					<span class="file_field_cover"></span>
			</span>
				<%= f.text_field :title, :autocomplete => :off, :value => "New category...", :onfocus => '(this.value == "New category...") ? this.value = "" : this.value', :onblur => '(this.value == "") ? this.value = "New category..." : this.value' %>
				<%= f.hidden_field :personal, :value => 'true' %>
				<span class="cancel"></span>
				<span class="edit_done"></span>
			<% end %>
		</div>
		<% @personal.each do |category| %>
			<%= render :partial => '/groups/category', :locals => { :category => category, :active => false } %>
		<% end %>
	</div>
			
</div>