<% content_for :top do %>
		<div class="cover"><%= image_tag current_user.image_url %></div>
		<div class="title"><%= current_user.name %></div>
		<div class="ribbon"></div>
<% end %>

<% content_for :page do %>
	<div id="user_result">
		<%= current_user.ult_outcome %>
		<span class="no_disp">
			<%= form_for(current_user) do |f| %>
				<%= f.text_field :ult_outcome %>
				<% end %>
		</span>
	</div>
	<div id="user_purpose">
		<%= current_user.ult_purpose %>
		<span class="no_disp">
			<%= form_for(current_user) do |f| %>
				<%= f.text_field :ult_purpose %>
				<% end %>
		</span>
	</div>
<% end %>

<%= render 'pad' %>
<%= render 'categories' %>