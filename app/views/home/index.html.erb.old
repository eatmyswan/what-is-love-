<div id="header">
	<div class="title">
	</div>
	<div id="invite_box">
		<h2>Request your invitation to try out the beta!</h2>
		<%= form_for(Invite.new) do |f| %>
			<div class="input_wrap">
				<%= f.text_field :name, :autocomplete => :off, :value => "Your Name", :onfocus => '(this.value == "Your Name") ? this.value = "" : this.value', :onblur => '(this.value == "") ? this.value = "Your Name" : this.value' %>
			</div>
			<div class="input_wrap">
				<%= f.email_field :email, :autocomplete => :off, :value => "Email Address", :onfocus => '(this.value == "Email Address") ? this.value = "" : this.value', :onblur => '(this.value == "") ? this.value = "Email Address" : this.value' %>
			</div>
			<%= f.submit "Request Invitation", :class => 'submit' %>
		<% end %>
	</div>
</div>
<div id="footer">
	<div class="top">
		<div class="copy">
			Copyright &copy; 2011 Robbins Research International, Inc. All Rights Reserved.
		</div>
	</div>
</div>
