<div id="account_bar">
		<span class="inner_highlight"></span>
		
		<div id="cal_btn"></div>
		<div id="notifications_btn"></div>
		
		<div class="account_wrap">
			<div class="img">
				<%= image_tag current_user.images.forward.first.image.thumb if current_user.images.first %>
			</div>
			<div class="name">
				<%= current_user.name %>
			</div>
			<div class="account_popup">
				<%= link_to('Logout', destroy_user_session_path, :method=>'delete') %>        
				<%= link_to('Edit Account', edit_user_registration_path, :id => 'edit_account') %>
			</div>
		</div>

		<div class="slide_wrap">
			<div id="datepicker" class="acct_datepicker">
			</div>

			<div id="notifications_wrap">
				<div class="title_bar">
					<span class="title">Notifications</span>
				</div>

				<div id="notifications">
					<a class="category">
						<span class="icon alert"></span>
						<span class="title">Look behind you!</span>
						<span class="time">Now</span>
					</a>

					<a class="category">
						<span class="icon info"></span>
						<span class="title">The muffins are ready</span>
						<span class="time">4:13 pm</span>
					</a>

					<a class="category">
						<span class="icon email"></span>
						<span class="title">New message from Steve Jobs</span>
						<span class="time">3:29 am</span>
					</a>

					<a class="category">
						<span class="icon alert"></span>
						<span class="title">Really important message that you won't be able to full read</span>
						<span class="time">Yesterday</span>
					</a>
				</div>

			</div>
		</div>
		
</div>