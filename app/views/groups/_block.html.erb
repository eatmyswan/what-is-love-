<li id="block_<%= task.id %>" class="block_wrap no_nest">
			<div class="block_drag">
				<div class="block_title">
					<%= link_to '', task_path(task, :task => { :collapsed => true }), :method => :put, :class => 'target' %>
					<%= link_to '', task_path(task), :method => :delete, :class => 'delete', :confirm => 'Are you sure?' %>
					<h2 class="block_title_tasks">Massive Action Plan</h2>
					<h2 class="block_title_outcome">Result / Outcome</h2>
					<h2 class="block_title_purpose">Purpose</h2>
				</div>
				<div class="block_body">
					<div class="tasks"> 
						<ol class="task_padding block_task_list sortable">
						<% total_min = 0 %>
						<% total_max = 0 %>
						<% must_time = 0 %>
							<% task.subtasks.order_by([:sort, :asc]).each_with_index do |subtask, index| %>
								<%= render :partial => '/tasks/task', :locals => {:task => task, :subtask => subtask, :index => index} %>
								<% total_min = total_min.to_i + subtask.min_duration.to_i if subtask.min_duration.to_i && subtask.complete == false %>
								<% total_max = total_max.to_i + subtask.max_duration.to_i if subtask.max_duration.to_i && subtask.complete == false %>
								<% must_time = must_time.to_i + subtask.min_duration.to_i if subtask.min_duration.to_i && subtask.must == true && subtask.complete == false %>
							<% end %>
						</ol>
						<%= form_for([task, Subtask.new]) do |f| %>
							<%= f.text_field :text, :autocomplete => :off, :value => "New task...", :onfocus => '(this.value == "New task...") ? this.value = "" : this.value', :onblur => '(this.value == "") ? this.value = "New task..." : this.value' %>
						<% end %>
					</div>
					<div class="outcome"> 
						<div class="outcome_padding">
							asdfasdf
							<div class="min_max_time">
								<strong>Must:</strong> 
									<span class="must_time"><%= must_time %> </span>  <br> 
								<strong>Total: </strong> 
									Min <span class="total_min"> <%= total_min %> </span> / Max <span class="total_max"> <%= total_max %> </span>
							</div>
						</div>
					</div>
					<div class="purpose"> 
						<div class="purpose_padding">
							sdf
						</div>
					</div>
				</div>
		</div>
</li>