<% content_for :sub_nav do %>


	<% @groups.each do |group| %>
	<div class="group" id="group_<%= group.id %>">
		<h2> <%= group.title %> </h2>
		<div class="sub_group_wrap">
			<%= link_to group_path(group), :class => (id?(group.id.to_s)) ? "active" : "" do %>
				<span class="inbox"></span>
				<span class="title">Inbox</span>
			<% end %>
		</div>
	</div>
	<% end %>

	<%= form_for(Group.new) do |f| %>
			<%= f.text_field :title, :autocomplete => :off, :value => "New group...", :onfocus => '(this.value == "New group...") ? this.value = "" : this.value', :onblur => '(this.value == "") ? this.value = "New group..." : this.value' %>
	<% end %>
<% end %>