<div id="task_<%= task.id %>" class="task_wrap <%= 'complete' if task.complete == true %>">
			<div class="task_count"> <%= index + 1 %> </div>
			<div class="task_drag">
				<%= link_to '', task_path(task, :task => { :must => false }), :method => :put, :class => 'must_on' if task.must == true %>
				<%= link_to '', task_path(task, :task => { :must => true }), :method => :put, :class => 'must_off' if task.must == false %>
				<%= link_to '', task_path(task, :task => { :complete => false }), :method => :put, :class => 'complete_on' if task.complete == true %>
				<%= link_to '', task_path(task, :task => { :complete => true }), :method => :put, :remote => true, :class => 'complete_off' if task.complete == false %>
				<%= editable_field task, :task, { :event => "dblclick", :onblur => "cancel", :width => "none", :height => "none" } %>
				<span class="task_date"><%= schedule_date(task.starts_at) if task.starts_at %> <%= min_duration(task.min_duration) if task.min_duration %><%= max_duration(task.max_duration) if task.max_duration %></span>
				<%= link_to '', block_create_path(task.id), :class => 'target' %>
				<%= link_to '', task_path(task), :method => :delete, :class => 'delete' %>
			</div>
			<% if task.complete == false %>
			<div class="tabs">
				<a class="leverage_tab" href="/email/email_form/<%=task.id%>">
					Leverage 
					<span class="text"> <%= task.leverage %> </span>
				</a>
				<span class="duration_tab" rel="/task/duration/<%=task.id%>">
					<span class="text">Min: <%= "#{task.min_duration}" if task.min_duration %> </span> /
					<span class="text">Max: <%= "#{task.max_duration}" if task.max_duration %> </span>
				</span>
				<span class="notes_tab" href="/task/edit_notes/<%=task.id%>">
					Notes
				</span>
				<span class="edit_tab" href="/task/edit_notes/<%=task.id%>">
					Edit
				</span>
			</div>
			<% end %>
		</div>		