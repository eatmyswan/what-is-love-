<% content_for :top do %>
		<div class="cover"></div>
		<div class="title">Inbox</div>
		<div class="ribbon"></div>
		<script src="/assets/group.js" type="text/javascript"></script>
<% end %>

<% content_for :page do %>
	<div id="group">

		<div id="input_wrap">
			<%= form_for(Task.new, :remote => true) do |f| %>
				<%= f.text_field :task, :autocomplete => :off, :value => "New task...", :onfocus => '(this.value == "New task...") ? this.value = "" : this.value', :onblur => '(this.value == "") ? this.value = "New task..." : this.value' %>
				<%= f.hidden_field :group_id, :value => '' %>
			<% end %>
		</div>

		<ul id="incomplete" class="sortable">
		<% @incomplete_tasks.each_with_index do |task, index| %>
				<%= render :partial => '/tasks/task', :locals => { :task => task, :index => index } %>
		<% end %>
		</ul>
		<h3 class="page <%= "no_disp" if @complete_tasks.count == 0 %>">Completed</h3>
		<ul id="complete">
			<% @complete_tasks.each_with_index do |task, index| %>
				<%= render :partial => '/tasks/task', :locals => { :task => task, :index => index } %>
			<% end %>
		</ul>	
	</div>
<% end %>

<%= render '/home/pad' %>