
<% content_for :top do %>

		<div class="calendar_title"><%= @start_date.strftime('%d %A') %></div>
		<div id="calendar_controls">
			<%= link_to '<', week_day_path(@start_date - 1.day), :class => 'button rounded_left', :remote => true %>
			<%= link_to 'Today', week_day_path(Date.today()), :class => 'button', :remote => true %>
			<%= link_to '>', week_day_path(@start_date + 1.day), :class => 'button rounded_right', :remote => true %>
		</div>
		<div class="ribbon"></div>

<% end %>

<% content_for :page do %>
	<div id="day_view">
	<% hours = ['12 <span class="new_smaller">AM</span>','1 <span class="new_smaller">AM</span>','2 <span class="new_smaller">AM</span>','3 <span class="new_smaller">AM</span>','4 <span class="new_smaller">AM</span>','5 <span class="new_smaller">AM</span>','6 <span class="new_smaller">AM</span>','7 <span class="new_smaller">AM</span>','8 <span class="new_smaller">AM</span>','9 <span class="new_smaller">AM</span>','10 <span class="new_smaller">AM</span>','11 <span class="new_smaller">AM</span>','12 <span class="new_smaller">PM</span>','1 <span class="new_smaller">PM</span>','2 <span class="new_smaller">PM</span>','3 <span class="new_smaller">PM</span>','4 <span class="new_smaller">PM</span>','5 <span class="new_smaller">PM</span>','6 <span class="new_smaller">PM</span>','7 <span class="new_smaller">PM</span>','8 <span class="new_smaller">PM</span>','9 <span class="new_smaller">PM</span>','10 <span class="new_smaller">PM</span>','11 <span class="new_smaller">PM</span>'] %>
		
		<div class="day_header">
			Must: <span class="must"></span>
			Total: <span class="totalmin"></span> / <span class="totalmax"></span>
		</div>
	
		<div class="queue_wrap">
			<div class="queue_hour"> 
				No Time 
			</div>
			<% for day in @start_date..@end_date %>  
	       <div class="queue droppable" date="<%= day %>">
	       	    <% for task in @tasks %>
	            	<% if task.starts_at.strftime('%j').to_s == day.strftime('%j').to_s && task.queued == true %>
									<%= render :partial => 'task_category', :locals => { :task => task } %>
								<% end %>
							<% end %>
	       </div>
	     <% end %>
		</div>

		<div class="grid_hours_wrap">
			
	     <div class="grid_wrap">
	
				<div class="hours">
	     		<% for hour in hours %>
	       		<div class="hour">
	        		<%= hour.html_safe %>
	        	</div>
	     			<% end %>
	    	</div>
	
		       <% for day in @start_date..@end_date %>
	          <div class="grid time_drop droppable" date="<%= day %>">
	          <% for task in @tasks %>
	            <% if task.starts_at.strftime('%j').to_s == day.strftime('%j').to_s && task.scheduled == true %>
								<%= render :partial => 'task', :locals => { :task => task } %>
	            <% end %>
	          <% end %>
	          </div>
	        <% end %>
	      </div>
		</div>
	</div>
<% end %>

<%= render '/home/pad' %>
