
<% content_for :top do %>

		<div class="calendar_title">
			<span class="big"></span>
			<span class="small"></span>
		</div>
		
		<div id="calendar_controls">
			<span id="prev">PREV</span>
			<span id="today">TODAY</span>
			<span id="next">NEXT</span>
		</div>
		<div class="ribbon"></div>

<% end %>

<% content_for :page do %>

	<div id="forecast"></div>
	
	<div id="new_event">
		<div class="cancel_cluetip">Cancel</div>
		<span class="date"></span>
		<span class="start"></span> - <span class="end"></span>
		<input type="text" class="task_title" value="New Event..">
		<input type="hidden" class="task_dbstart">
		<input type="hidden" class="task_dbend">
		<div id="create_event">Create</div>
	</div>
	
	<div id="edit_event">
		<div class="cancel_cluetip">Cancel</div>
		<div id="delete_event">Delete</div>
		<span class="date"></span>
		<span class="start"></span> - <span class="end"></span>
		<input type="text" class="task_title">
		<input type="hidden" class="task_dbstart">
		<input type="hidden" class="task_dbend">
		<input type="hidden" class="task_id">
		<div id="update_event">Update</div>
	</div>
	
<% end %>

<%= render '/home/pad' %>
