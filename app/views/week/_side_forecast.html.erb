<div class="categories_wrap" id="week_committed">
	
	<div id="week_plan_side">
		<div class="date"><%= @start_date.strftime('%b %d') %> - <%= @end_date.strftime('%d') %> Commit</div>
	</div>
		
		
	<div id="day_drop_wrap">
		<% for day in @start_date .. @end_date %>
			<div class="day_wrap">
				<div class="day_title">
					<%= day.strftime('%A %m/%d') %>
					<div class="must_wrap">
						<span class="title">Must</span><span class="time">00:00</span>
					</div>
					<div class="total_wrap">
						<span class="title">Total</span><span class="time">00:00</span>
					</div>
				</div>
				<ul class="committed_wrap sortable day_drop" date="<%= day %>">
					<% @tasks.each do |task| %>
						<% if task.start.at_midnight() == day %>
							<%= render :partial => '/tasks/task', :locals => { :task => task, :action_plan => 'false' } %>
						<% end %>
					<% end %>
				</ul>

			</div>
		<% end %>
	</div>

</div>