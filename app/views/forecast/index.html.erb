<%= render '/groups/sub_nav' %>

<%= weekly_calendar(@events, :date => @date, :include_24_hours => true) do |w| %>
	<%= w.week(:business_hours => params[:business_hours], :clickable_hours => true) do |event| %>
		
		<% if (event.starts_at != event.ends_at) %>
			<div class="start_time">    
				<%= event.starts_at.strftime('%l:%M%p') %> - <%= event.ends_at.strftime('%l:%M%p') %>
			</div>
			<div class="task">
	    	<%= event.task %>
			</div>
			<div>
				<%= link_to 'x', task_path(event, :task => { :starts_at => nil, :ends_at => nil }), :method => :put, :remote => true %>
			</div>
		<% else %>
			<div class="start_time">    
				
			</div>
			<div class="task">
	    	<%= event.task %>
			</div>
			<div>
				<%= link_to 'x', task_path(event, :task => { :starts_at => nil, :ends_at => nil }), :method => :put, :remote => true %>
			</div>
		<% end %>
		
	<% end %>
<% end %>

<input type="hidden" id="start_date" value="<%= @start_date %>">