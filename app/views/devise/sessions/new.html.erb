


<div id="header">
	<div class="title">
	</div>
	<div id="invite_box">
		<h2>Sign In</h2>
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  	<div class="input_wrap"><%= f.email_field :email, :autocomplete => :off, :value => "Email Address", :onfocus => '(this.value == "Email Address") ? this.value = "" : this.value', :onblur => '(this.value == "") ? this.value = "Email Address" : this.value' %></div>

  <div class="input_wrap"><%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="remember_wrap"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <%= f.submit "Sign in", :class => 'submit' %>
<% end %>
	</div>
</div>
