
<% content_for :top do %>

		<div class="calendar_title">
			<span class="big"><%= @start_date.strftime('%A') %></span>
			<span class="small"><%= @start_date.strftime('%B %d, %Y') %></span>
		</div>
		<div id="calendar_controls">
			<%= link_to 'Capture', day_capture_path(Date.today()), :id => 'day_capture', :class => 'filter rounded_left', :remote => true %>
			<%= link_to 'Plan', day_plan_path(Date.today()), :id => 'day_plan', :class => 'filter active', :remote => true %>
			<%= link_to 'Schedule', day_schedule_path(Date.today()), :id => 'day_schedule', :class => 'filter rounded_right', :remote => true %>
		</div>
		<div class="ribbon"></div>

<% end %>

<% content_for :page do %>
<div id="group">
	<div id="day_plan_wrap">
		<div id="input_wrap">
			<span class="inner_shadow"></span>
			<%= form_for(Task.new, :remote => true) do |f| %>
				<%= f.text_field :task, :autocomplete => :off, :value => "New task...", :onfocus => '(this.value == "New task...") ? this.value = "" : this.value', :onblur => '(this.value == "") ? this.value = "New task..." : this.value' %>
				<%= f.hidden_field :starts_at, :value => @start_date %>
				<%= f.hidden_field :group_id, :value => @inbox.id.to_s %>
			<% end %>
		</div>
		<div id="incomplete">
			<ul class="sortable incomplete_task_list">
				<% @plans.each do |task,index| %>
					<%= render :partial => '/tasks/task', :locals => { :task => task } %>
				<% end %>
			</ul>
		</div>
	</div>
</div>
<% end %>

<%= render '/home/pad' %>
