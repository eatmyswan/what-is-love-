<div id='schedule_side'>
		<div>
			<span id="prev">PREV</span>
			<span id="today">TODAY</span>
			<span id="next">NEXT</span>
		</div>
	<div id="date_section">
		<div class="big_date"><%= @start_date.strftime('%e') %></div>
		<div class="small_date"><%= @start_date.strftime('%A') %></div>
		<div class="small_date"><%= @start_date.strftime('%B %Y') %></div>
	</div>
</div>
