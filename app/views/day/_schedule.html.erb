
<% content_for :top do %>

		<div class="calendar_title">
			<span class="big"></span>
			<span class="small"></span>
		</div>
		<div id="calendar_controls">
			<%= link_to 'Capture', day_capture_path(Date.today()), :id => 'day_capture', :class => 'filter rounded_left', :remote => true %>
			<%= link_to 'Plan', day_plan_path(Date.today()), :id => 'day_plan', :class => 'filter', :remote => true %>
			<%= link_to 'Schedule', day_schedule_path(Date.today()), :id => 'day_schedule', :class => 'filter rounded_right active', :remote => true %>
		</div>
		<div>
			<span id="prev">PREV</span>
			<span id="today">TODAY</span>
			<span id="next">NEXT</span>
		</div>
		<div class="ribbon"></div>

<% end %>

<% content_for :page do %>

	<div id="schedule">
	</div>
	
<% end %>

<%= render '/home/pad' %>
