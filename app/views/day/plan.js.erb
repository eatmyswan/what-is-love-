function ap(hours,minutes){
	var ap = (hours < 12) ? 'am' : 'pm';
	var hour = (hours > 12) ? hours - 12 : hours
	var hour = (hours == 0) ? 12 : hour
	var minute = (minutes.length == 1) ? ':0'+minutes : ':'+minutes;
	var minute = (minute == ':00') ? '' : minute;
	return hour+minute+ap;
}

});