<h2>Ultimate Outcome</h2>
<%= @user.ult_outcome %>
	<%= form_for(@user) do |f| %>
		<%= f.text_field :ult_outcome %>
	<% end %>
<h2>Ultimate Purpose</h2>
<%= @user.ult_purpose %>
	<%= form_for(@user) do |f| %>
		<%= f.text_field :ult_purpose %>
	<% end %>

<br><br>
<h2>Personal Group</h2>
<% @personal_groups.each do |group| %>
<div>
	<%= link_to group.title, group_path(group) %>
</div>
<% end %>
		<%= form_for(Group.new, :html => { :class => "asd" }) do |f| %>
			<%= f.text_field :title, :id => 'asdf', :autocomplete => :off, :value => "New group...", :onfocus => '(this.value == "New group...") ? this.value = "" : this.value', :onblur => '(this.value == "") ? this.value = "New group..." : this.value' %>
			<%= f.hidden_field :master_title, :value => 'Personal' %>
		<% end %>
<br><br>
