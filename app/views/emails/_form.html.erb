<div id="email_wrap">
	
<%= form_for ([@task, Email.new]) do |f| %>
	<input type="hidden" name="email[sender_uid]" value="<%= current_user.id %>">
	<div class="modal_title_wrap">
			<div class="modal_cancel_wrap">
				<div id="close_fancybox"><span class="no_disp">Cancel</span></div>
			</div>
			<div class="modal_submit_wrap">
				<%= image_submit_tag("/assets/clear.gif", :class => 'send') %>
			</div>
			<div class="modal_title"> Email Item </div>
	</div>
	<div id="fields_wrap">
		<div class="address_wrap">
			<label>To</label><%= f.text_field :recipient %>
			<div class="from_wrap">
				<label>From</label><%= f.text_field :sender, :value => "no_reply@rpmapp.com" %>
			</div>
		</div>
		<div class="subject_wrap">
			<label>Subject</label><%= f.text_field :subject, :value => "#{current_user.name} has leveraged you an item" %>
		</div>
		<div class="recorder_wrap">
			<label>Voice</label>
			<div id="recorder">
				<% session_key_name = Rails.application.config.session_options[:key] %>
				<%= swf_tag "/assets/recorder.swf", :id => 'VOCWordToYourMp3', :width => '250', :height => '137', :flash_version => '10', :flashvars => { :authVar => "#{u(form_authenticity_token)}", :sessionVar => "#{u(cookies[session_key_name])}", :taskId => "#{@task.id}" } %>
			</div>
		</div>
	</div>
	<div class="body_wrap">
		<%= f.text_area :body_html, :value => "#{current_user.name} would like you to take care of the following: \n\n#{@task.task} \n\nSent via\nRPM app" %>
	</div>
	
<% end %>

</div>