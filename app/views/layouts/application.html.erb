<!DOCTYPE html>
<html>
<head>
  <title> RPM </title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults, 'jquery-ui-1.8.16.min', 'jquery.jeditable.min', 'jquery.cluetip' %>
  <%= csrf_meta_tag %>
</head>
<body>

	<div id="nav">
	  <% if user_signed_in? %>
			<%= link_to image_tag(current_user.image.thumb.url), edit_user_registration_path, :class => "user" %>
			<%= link_to '', root_path, :class => (controller?("groups") && action?("show")) ? "planner_active" : "planner"  %>
			<%= link_to '', root_path, :class => "calendar" %>
			<%= link_to '', root_path, :class => "contacts" %>
	  <% end %>
	</div>
	
	<div id="sub_nav">
		<%= yield :sub_nav %>
	</div>
	
	<div id="content">
		<span class="notice"><%= notice %></span>
		<span class="alert"><%= alert %></span>
		<%= yield %>
	</div>

	<%= yield :javascript %>
	
</body>
</html>
