<!DOCTYPE html>
<html>
<head>
  <title> RPM </title>
  <%= stylesheet_link_tag '0_reset.css', 'cluetip.css', 'datepicker.css', 'global.css', 'plan.css', 'icons.css', 'account.css' %>
  <%= javascript_include_tag :defaults, 'jquery-ui-1.8.16.min', 'jquery.jeditable.min', 'jquery.cluetip' %>
  <%= csrf_meta_tag %>
</head>
<body style="background: url(/images/<%= current_user.background %>.jpg) no-repeat bottom left #222">

	<div id="nav">

		<% if current_user %>
			<%= link_to image_tag(current_user.image_url), account_settings_path, :class => "user" %>
			<%= link_to '', groups_path, :class => (controller?("groups") && action?("show")) ? "planner_active" : "planner"  %>
			<%= link_to '', root_path, :class => "calendar", :confirm => "Under Development" %>
			<%= link_to '', root_path, :class => "contacts", :confirm => "Under Development" %>
		<% else %>
	  	<%= link_to "Sign in with Twitter", "/auth/twitter" %>
		<% end %>
	</div>
	
	<div id="sub_nav">
		<%= yield :sub_nav %>
	</div>
	
	<div id="content">
		<span class="notice"><%= notice %></span>
		<span class="alert"><%= alert %></span>
		<%= yield %>
	</div>

	<%= yield :javascript %>
	
</body>
</html>
