<div class="dialog">
<%= form_for resource, :as => resource_name, :url => session_path(resource_name), :remote => true do |f| %>

  <div class="top"></div>
  <div class="content">
    <h3>Sign In</h3>

    <p class="errorExplanation hide">Incorrect Email or Password.</p>

    <p class="no-account-question">
      Don't have a beta account?
      <%= link_to 'Click here', new_invite_path, :remote => true %>
      to request one.
    </p>

    <%= f.label :email %>
    <%= f.email_field :email, :autocomplete => :off, :class => 'input' %>

    <%= f.label :password %>
    <%= f.password_field :password, :class => 'input' %>

    <% if devise_mapping.rememberable? -%>
      <div class="remember_wrap"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>
  </div>
  <div class="content-end"></div>
  <div class="bottom">
    <%= f.submit "Sign in", :class => 'submit' %>
    <div class="loader hide"></div>
  </div>

<% end %>
</div>
